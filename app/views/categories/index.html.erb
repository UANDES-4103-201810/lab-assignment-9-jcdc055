<p id="notice"><%= notice %></p>

<h1>Categories</h1>

<div class="container">


  <table class="table table-dark table-hover">
    <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>

      <th>Show</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
    </thead>
    <tbody>
    <% @categories.each do |x| %>

      <tr>
        <td> <%=x.name%></td>
        <td> <%=x.description%></td>

        <td> <%= link_to 'Show','/users/' + x.id.to_s %></td>
        <td> <%= link_to 'Edit', edit_category_path(x) %></td>
        <td><%= link_to 'Destroy', x, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end%>

<br>

<%= link_to 'New Category', new_category_path %>
